   "name": "Bubble Translate",
   "options_page": "preferences.html",
   "page_action": {
      "default_icon": "images/16.png",
      "default_title": "Bubble Translate",
      "popup": "popup.html"
   },
   "permissions": [ "tabs", "http://*/*", "https://*/*" ],
